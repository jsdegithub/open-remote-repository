{
  "name": "open-remote-repository",
  "displayName": "Open Remote Repository",
  "description": "在状态栏添加按钮，点击打开远程仓库。",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.50.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "debug": "nodemon --watch src --exec \"code --extensionDevelopmentPath=%cd% --disable-extensions --new-window\""
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "contributes": {
    "commands": [
      {
        "command": "openRemoteRepository.openRepo",
        "title": "打开远程仓库"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Open Remote Repository Configuration",
      "properties": {
        "openRemoteRepository.repoUrl": {
          "type": "string",
          "default": "",
          "description": "远程仓库地址模板，使用 ${repoName} 作为占位符（注意：${repoName}是固定写死的内容，不可缺少），它将被替换为当前项目的文件夹名称。例如: https://github.com/username/${repoName}"
        }
      }
    }
  }
}
